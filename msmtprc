# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_starttls   on
tls_certcheck  on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account        ira
host           smtp.1und1.de
port           587
from           sahib@online.de
user           christopher@ira-kunststoffe.de
passwordeval   "secret-tool lookup smtp ira; echo"

account        hsa
host           smtp.hs-augsburg.de
port           25
from           christopher.pahl@hs-augsburg.de
user           sahib
passwordeval   "secret-tool lookup smtp hsa; echo"


# Set a default account
account default : ira
