# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

# Custom theme for zsh:
export ZSH_THEME="lemur"

# Do not care about case on completion:
export CASE_SENSITIVE="false"

# Do not update all unannounced:
export DISABLE_AUTO_UPDATE="true"

# Set the window title based on the current program:
export DISABLE_AUTO_TITLE="false"

# set a number of plugins:
plugins=(git golang timer sudo ssh-agent gpg-agent zsh-syntax-highlighting cp aws colored-man-pages python last-working-dir)

# Uncomment the following line to display red dots whilst waiting for completion.
COMPLETION_WAITING_DOTS="false"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
DISABLE_UNTRACKED_FILES_DIRTY="true"

# load the oh-my-zsh plugins and themes:
source $ZSH/oh-my-zsh.sh

# General setup:
export EDITOR="nvim"
export BROWSER=firefox
export XTERM="kitty"
export TERM=xterm-kitty
export TERMINAL="$XTERM"
export GPG_TTY=$(tty)
export PAGER="most"

# Keys:
bindkey '^A' beginning-of-line
bindkey '^E' end-of-line
bindkey '^[[5~' up-line-or-history

zstyle ':completion:*' completer _complete _match _approximate
zstyle ':completion:*:match:*' original only
zstyle ':completion:*:approximate:*' max-errors 1 numeric

# Go stuff:
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin
export GOBIN=$GOPATH/bin

# Add own scripts and go output to path:
export PATH="$GOBIN:$PATH"
export PATH="/home/$USER/bin/:$PATH"

# enable coredumps:
ulimit -c unlimited

# Because my fingers don't learn new tool names anymore:
alias ag=rg
alias ranger=lf
alias vi=nvim
alias vim=nvim
alias gdk='git difftool --no-symlinks --dir-diff'
alias ls='eza --git --links --inode --header'
alias ll='eza --git --links --inode --header -l'

# Make fzf pretty by default:
export BAT_THEME="Solarized (light)"
export FZF_DEFAULT_OPTS="--height 40% --layout=reverse --border --preview 'bat --style=numbers --color=always --line-range :100 --theme=\"${BAT_THEME}\" {}'"

# Load some extra aliases I use for work mostly:
[ -f "~/.zshrc.extra" ] && source "~/.zshrc.extra"

# Bump the history a bit:
HISTFILE="$HOME/.zsh_history"
HISTSIZE=10000000
SAVEHIST=10000000

eval "$(zoxide init zsh)"

if [ -f ~/.zshrc.extra ]; then
    source ~/.zshrc.extra
fi
source /usr/share/nvm/init-nvm.sh
