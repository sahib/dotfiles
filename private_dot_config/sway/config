set $violet  #5a32a3
set $blue    #0366d6
set $cyan    #0598bc
set $green   #58f785


default_border pixel 1
default_floating_border normal
titlebar_border_thickness 1

# class                 border  backgr.  text    indicator child_border
client.focused          $base00  $green   $base02 $green    $base00
